set selection-clipboard clipboard # enable clipboard
set guioptions = # disable the statusbar by default
set page-padding 6
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map H zoom in
map L zoom out
map M zoom 100%
map i recolor
map p print
map S toggle_statusbar
# display how many words there are in the current pdf file
map w exec "countwords '$FILE'" # notify-send 'Word count' "$(pdftotext $1 - | tr -d '[:punct:]' | wc -w)"
