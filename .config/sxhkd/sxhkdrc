#---KOALA'S KEYBINDINGS
# In some cases you may see 'pkill -RTMIN+n dwmblocks' - that is to update my statusbar; feel free to remove it if you don't use dwm and/or dwmblocks.

# Launch terminal
mod4 + Return
    $TERMINAL

# Power options
ctrl + mod1 + {p,r,s}
	loginctl {poweroff, reboot, suspend && pkill -RTMIN+3 dwmblocks}

# Lockscreen
ctrl + mod1 + l
    slock

# Dmenu
mod4 + d ; {d,c,p,g,u,e,k,m,s,n,y,a,b,t,r,l}
    {dmenu_run,calcmenu,colourpick,ddgmenu,dmenuunicode,epicmenu,killmenu,maimenu,soundmenu,dnotes,ytmenu,awmenu,bookmenu,dtranslate,radiomenu,linkmenu}

# Launch applications
mod4 + mod1 + {a,k,s,l,m,v,d,b,f,g}
	{anki --no-sandbox,keepassxc,signal-desktop,lutris,polymc,steam,discord,$BROWSER}

# Media controls
{XF86AudioNext,XF86AudioPrev,XF86AudioPlay}
    playerctl {next,previous,play-pause}

# Volume controls
{XF86AudioMute,XF86AudioLowerVolume,XF86AudioRaiseVolume}
    pamixer {-t,-d 5,-i 5} && pkill -RTMIN+2 dwmblocks

# Refresh sxhkd bindings
mod4 + ctrl + s
	notify-send "Refreshed sxhkd bindings." && killall sxhkd && sxhkd &

# Keyboard layouts
mod4 + s ; {u,n,g}
    setxkbmap -layout {us,no,gb} && pkill -RTMIN+1 dwmblocks && kbd-remaps

# Kill window
mod4 + ctrl + semicolon
    xkill -id "$(xprop -root _NET_ACTIVE_WINDOW | cut -d'#' -f2)"
